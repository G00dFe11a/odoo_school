<odoo>
    <record id="hr_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hr.hospital.appointment.tree ()</field>
        <field name="model">hr.hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hr.hospital.appointment.form ()</field>
        <field name="model">hr.hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
